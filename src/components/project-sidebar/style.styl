@import '../../styles/general/host-block.styl'
@import '../../styles/general/color.styl'
@import '../../styles/components/button.styl'

.sidebar
  position fixed
  width 250px
  height 100vh
  top 0
  bottom 0
  left -300px
  transition left 0.3s
  padding 20px
  background $dark-violet
  color $light
  z-index 10000
  overflow hidden

  .title
    margin 0

    .logo
      width 100%

      @media screen and (max-width: 600px)
        width 15rem

.open
  left: 0
  transition: left 0.3s

.logo-anchor
  text-decoration none
  color inherit

.button
  button-base()
